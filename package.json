{
  "name": "nightingale-cms",
  "version": "1.0.0-rc.1",
  "description": "A comprehensive React-based case management system for vocational rehabilitation services",
  "main": "index.html",
  "scripts": {
    "start": "npm run build && npx serve dist --port=3000",
    "start:preview": "vite preview --port=3000",
    "dev": "vite",
    "build": "vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "echo 'No E2E suite configured' && exit 0",
    "test:performance": "echo 'No performance suite configured' && exit 0",
    "seed": "node scripts/seed.js",
    "lint": "eslint --config .eslintrc.cjs \"src/**/*.{js,jsx}\"",
    "lint:fix": "eslint --config .eslintrc.cjs \"src/**/*.{js,jsx}\" --fix",
    "lint:report": "eslint --config .eslintrc.cjs \"src/**/*.{js,jsx}\" --format=json --output-file=lint-report.json",
    "audit": "npm audit && npm run lint",
    "audit:security": "npm audit --audit-level=moderate",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md,html}\"",
    "docs": "jsdoc -r src/ -d docs/api",
    "analyze": "node scripts/analyze-dist.js",
    "build:production": "vite build",
    "build:staging": "vite build",
    "deploy:staging": "echo 'Deploy staging not configured; use vite preview or a staging workflow' && exit 0",
    "commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "prepare": "husky"
  },
  "keywords": [
    "case-management",
    "vocational-rehabilitation",
    "react",
    "cms",
    "healthcare",
    "disability-services"
  ],
  "author": "Nightingale Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nightingale-cms.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/nightingale-cms/issues"
  },
  "homepage": "https://Skigim.github.io/nightingale-cms/",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-internal": "file:./eslint-plugin-internal",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.0.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^7.3.2",
    "dayjs": "^1.11.13",
    "fuse.js": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --config .eslintrc.cjs --fix"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.{js,jsx}",
      "<rootDir>/tests/**/*.(test|spec).{js,jsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/docs/"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
